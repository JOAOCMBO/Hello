<Window x:Name="Hello" x:Class="Hello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hello" Width="414" Height="242">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="50,50,0,0" TextWrapping="Wrap" Text="Digite seu nome" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="userName" HorizontalAlignment="Left" Height="25" Margin="50,100,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="145" FontSize="14.667"/>
        <Button x:Name="ok" Content="OK" HorizontalAlignment="Left" Margin="260,100,0,0" VerticalAlignment="Top" Width="95" Height="25" Click="okClick"/>

    </Grid>
</Window>
